div(ng-include='"components/navbar/navbar.html"')
.contain-main
  .container
    .row
      .col-xs-12
        account-menu
      .col-sm-12
        h1 Change Profile
        form.form(name='profileForm', ng-submit='changeProfile(profileForm)', novalidate='')
          .form-group
            label Username
            input.form-control(type='username', name='username', ng-model='user.username', mongoose-error='')
            p.help-block
              span(ng-show='form.username.$error.mongoose') {{ errors.profile }}
              span {{ message.profile }}
          button.btn.btn-lg.btn-primary(type='submit') Save changes


      .col-sm-12
        h1 Change Email
      .col-sm-12
        form.form(name='emailForm', ng-submit='changeEmail(emailForm)', novalidate='')
          .form-group
            label Email
            input.form-control(type='email', name='email', ng-model='user.email', mongoose-error='')
            p.help-block
              span(ng-show='emailForm.email.$error.mongoose') {{ errors.email }}
              span {{ message.email }}

          button.btn.btn-lg.btn-primary(type='submit') Save changes
      .col-sm-12
        h1 Change Password
      .col-sm-12
        form.form(name='passwordForm', ng-submit='changePassword(passwordForm)', novalidate='')
          .form-group
            label Current Password
            input.form-control(type='password', name='password', ng-model='user.oldPassword', mongoose-error='')
            p.help-block
              span(ng-show='form.password.$error.mongoose') {{ errors.password }}
          .form-group
            label New Password
            input.form-control(type='password', name='newPassword', ng-model='user.newPassword', ng-minlength='3', required='')
            p.help-block(ng-show='(form.newPassword.$error.minlength || form.newPassword.$error.required) && (form.newPassword.$dirty || submitted)')
              | Password must be at least 3 characters.
          p.help-block  {{ message.password }}
          button.btn.btn-lg.btn-primary(type='submit') Save changes
