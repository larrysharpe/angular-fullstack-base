div(ng-include='"components/navbar/navbar.html"')
.contain-watch
  .container
    .row
      .col-xs-12(ng-if="isOffline()")
        h1 {{broadcaster.username}} is offline.
          small Don't worry there's plenty more where that came from.
      .col-xs-12(ng-if="isOnline()")
        h1 {{broadcaster.username}}
        .video#video
          object#watch(classid='clsid:d27cdb6e-ae6d-11cf-96b8-444553540000', codebase='http://download.macromedia.com/pub/shockwave/cabs/flash/swflash.cab#version=9,0,0,0', width='300', height='225', align='middle')
            param(name='allowScriptAccess', value='sameDomain')
            param(name='allowFullScreen', value='true')
            param(name='movie', value='assets/playerwork/watch.swf')
            param(name='quality', value='high')
            param(name='bgcolor', value='#ffffff')
            embed(src='assets/playerwork/watch.swf', quality='high', bgcolor='#ffffff', width='300', height='225', name='watch', align='middle', allowscriptaccess='sameDomain', allowfullscreen='true', type='application/x-shockwave-flash', pluginspage='http://www.macromedia.com/go/getflashplayer')
      .col-xs-12(ng-if="!broadcaster")
        h1
          small We're sorry {{slug}} does not exist.
          p
            Please checkout our other models below.
.container
  .row
    .col-sm-12(ng-if="isLoggedIn")
      h2 Online Favorites
      broadcaster-list.favorites(type="favorites", limit="5")
    .col-sm-12
      h2 Trending
      broadcaster-list.trending(type="trending")
    .col-sm-12
      h2 Our Picks
      broadcaster-list(type="picks")
    .col-sm-12
      h2 Online
      broadcaster-list(type="online")
    .col-sm-12
      h2 Offline
      broadcaster-list(type="offline")
.container.debug
  .row
    .col-xs-12
      | {{broadcaster | json}}
