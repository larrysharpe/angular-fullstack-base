.contain-watch
  .container
    .row
      .col-xs-12
        p
          timer(interval="1000", auto-start='false', countdown='user.credits.units')
            span(ng-if="hours") {{hhours}}:
            span {{mminutes}}:{{sseconds}}/
            span {{seconds * .05 | number: 2 }}
        p {{user.credits.units}}
    .row
      .col-xs-12
        .left
          .video#video
            object#video-swf(classid='clsid:d27cdb6e-ae6d-11cf-96b8-444553540000', codebase='http://download.macromedia.com/pub/shockwave/cabs/flash/swflash.cab#version=9,0,0,0', width='100%', height='100%', align='middle')
              param(name='allowScriptAccess', value='sameDomain')
              param(name='allowFullScreen', value='true')
              param(name='movie', value='assets/playerwork/watch2.swf')
              param(name='quality', value='high')
              param(name='bgcolor', value='#000000')
              embed(src='assets/playerwork/watch2.swf', quality='high', bgcolor='#000000', width='100%', height='100%', name='video-swf', align='middle', allowscriptaccess='sameDomain', allowfullscreen='true', type='application/x-shockwave-flash', pluginspage='http://www.macromedia.com/go/getflashplayer')
            div.hiddenCamStatus
              span(ng-if="broadcaster.status.show == 'group'") {{broadcaster.username}} is in a group show.
              span(ng-if="broadcaster.status.show == 'private'") {{broadcaster.username}} is in a private show.
              span(ng-if="broadcaster.status.show == 'vip'") {{broadcaster.username}} is in a vip show.
              span(ng-if="broadcaster.status.show == 'password'") {{broadcaster.username}} is in a password show.
          .controls
            button.btn.btn-primary(ng-click='startTimer()') Start Time
            tip-component.left
        .left
          room-chat
private-chat(user='user', broadcaster='broadcaster')
