div(ng-include='"components/navbar/navbar.html"')
.contain-broadcast
  .container
    .row
      .col-xs-12(ng-if="broadcaster")
        h1 {{broadcaster.username}}
        .video#video
          object#watch(classid='clsid:d27cdb6e-ae6d-11cf-96b8-444553540000', codebase='http://download.macromedia.com/pub/shockwave/cabs/flash/swflash.cab#version=9,0,0,0', width='100%', height='100%', align='middle')
            param(name='allowScriptAccess', value='sameDomain')
            param(name='allowFullScreen', value='true')
            param(name='movie', value='assets/playerwork/broadcast.swf')
            param(name='quality', value='high')
            param(name='bgcolor', value='#000000')
            embed(src='assets/playerwork/broadcast.swf', quality='high', bgcolor='#000000', width='100%', height='100%', name='watch', align='middle', allowscriptaccess='sameDomain', allowfullscreen='true', type='application/x-shockwave-flash', pluginspage='http://www.macromedia.com/go/getflashplayer')
        .controls
          button(ng-click="doConnect()") start
          button(ng-click="undoConnect()") stop
