div(ng-include='"components/navbar/navbar.html"')

.contain-main
  .container
    .row
      .col-xs-12
        p
          a(ng-click='seedDB()') Seed The DB
    .row
      .col-md-6
        table.table.table-striped.table-bordered
          caption Users
          tr
            th Username
            th Roles
            th Online
            th Availability
            th Show
          tr(ng-repeat="user in users | orderBy:'username' ")
            td
              a(href="/admin/user/{{user._id}}", title="{{::user.email}}") {{::user.username}}
            td {{::user.roles.join(',')}}
            td
              select(ng-model='user.status.online', ng-change='statusOnlineChange(user.status.online)')
                option(ng-repeat='opt in options.online', value='opt.value', ng-selected="opt.value === user.status.online") {{opt.label}}
            td
              select(ng-model='user.status.availability', ng-options='o as o for o in options.availability',ng-change='statusAvailabilityChange(user.status.availability)')
            td
              select(ng-model='user.status.show', ng-options='o as o for o in options.show', ng-change='statusShowChange(user.status.show)')
            td(ng-if="needsBroadcasterApproval($index)")
              span
                a(href="", ng-click="approveBroadcaster(user,$index)") Approve
                a(href="", ng-click="denyBroadcaster(user,$index)") Deny
            td
              a.trash(ng-click='delete(user)')
                span.glyphicon.glyphicon-trash.pull-right
